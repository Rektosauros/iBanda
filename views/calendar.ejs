<%- include('header') -%>

<%
var mesText
switch(parseInt(mes)){
    case 1: mesText = 'Janeiro'; break;
    case 2: mesText = 'Fevereiro'; break;
    case 3: mesText = 'MarÃ§o'; break;
    case 4: mesText = 'Abril'; break;
    case 5: mesText = 'Maio'; break;
    case 6: mesText = 'Junho'; break;
    case 7: mesText = 'Julho'; break;
    case 8: mesText = 'Agosto'; break;
    case 9: mesText = 'Setembro'; break;
    case 10: mesText = 'Outubro'; break;
    case 11: mesText = 'Novembro'; break;
    case 12: mesText = 'Dezembro'; break;
}
var antmes = parseInt(mes) - 1
if(antmes===-1){
    var antano = parseInt(ano) - 1
    antmes = 11
} else {
    var antano = ano
}
var proxmes = parseInt(mes) + 1
if(proxmes===12){
    var proxano = parseInt(ano) + 1
    proxmes = 0
} else {
    var proxano = ano
}
%>
<div class="principal">
        <div class="month">
                <ul>
                  <li class="prev"><a href="/eventos/<%=antano%>/<%=antmes%>">&#10094;</a></li>
                  <li class="next"><a href="/eventos/<%=proxano%>/<%=proxmes%>">&#10095;</a></li>
                  <li>
                    <%=mesText%><br>
                    <span style="font-size:18px"><%=ano%></span>
                  </li>
                </ul>
              </div>

              <ul class="weekdays">
                <li>Mo</li>
                <li>Tu</li>
                <li>We</li>
                <li>Th</li>
                <li>Fr</li>
                <li>Sa</li>
                <li>Su</li>
              </ul>

              <ul class="days">
              <%for(var j=1;j<start;j++){%>
                  <li></li>
              <%}%>
              <%for(var i=1;i<=range;i++){
                  if(dia===i){%>
                      <li><span class="active"><a href="/eventos/<%=ano%>/<%=mes%>/<%=i%>"><%=i%></a></span></li>
                  <%}else{%>
                      <li><a href="/eventos/<%=ano%>/<%=mes%>/<%=i%>"><%=i%></a></li>
                  <%}%>
              <%}%>
              </ul>

</div>
<style>
        * {box-sizing: border-box;}
        /*ul {list-style-type: none;}*/
