        <title>iBanda</title>
    </head>
    <body>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
        <header class='w3-container w3-light-grey'>
            <h1>iBanda</h1>
        </header>
        
        <% if(eventos){ 
        for(var i=0; i<eventos.length; i++){ %>
            <table class='w3-table'>
                <tr>
                    <th>Data: </th>
                    <td>
                        <% var data = new Date(Date.parse(eventos[i].data)) %>
                        <%=data.getDate()%>/<%=data.getMonth()+1%>/<%=data.getFullYear()%>
                        às <%=data.getHours()%>:<%if(data.getMinutes() < 10){%>0<%= data.getMinutes() %><% } else { %><%= data.getMinutes() %>
                        <% } %>
                    </td> 
                </tr>
                <tr>
                    <th>Duração: </th>
                    <td>
                        <%=eventos[i].duracao%>
                    </td>
                </tr>
                <tr>
                    <th>Local: </th>
                    <td>
                        <%=eventos[i].local%>
                    </td>
                </tr>
                <tr>
                    <th>Designacao: </th>
                    <td>
                        <%=eventos[i].designacao%>
                    </td>
                </tr>
            </table>
        <% }} %>        
        <form action='/novoevento' method='POST'>
            <input type='text' placeholder='Ano' value=<%=ano%> name='ano'/>
            <input type='text' placeholder='Mês' value=<%=mes%> name='mes'/>
            <input type='text' placeholder='Dia' value=<%=dia%> name='dia'/><br>
            <input type='text' placeholder='Horas' name='horas'/>
            <input type='text' placeholder='Minutos' name='minutos'/><br>
            <input type='text' placeholder='Duração' name='duracao'/><br>
            <input type='text' placeholder='Local' name='local'/><br>
            <input type='text' placeholder='Designação' name='designacao'/><br>
            <div align='right'>
                <input type='submit' value='Publicar' class='w3-button w3-blue' />
            </div>
        </form>
        <h1><a href=".">VOLTAR</a></h1>
    </body>  
</html>